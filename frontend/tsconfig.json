{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "sourceMap": false,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/*.ts", "src/*.vue"],
  "exclude": ["node_modules"]
}
