{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "esModuleInterop": true
  },
  "include": ["src/*.ts", "src/*.vue"],
  "exclude": ["node_modules"]
}
